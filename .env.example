# ================================
# LibreView Configuration
# ================================
LIBREVIEW_EMAIL=your-libreview-email@example.com
LIBREVIEW_PASSWORD=your-libreview-password
LIBRE_USERNAME=your-libreview-email@example.com  # Same as LIBREVIEW_EMAIL
LIBRE_PASSWORD=your-libreview-password           # Same as LIBREVIEW_PASSWORD

# ================================
# AI Model API Keys
# ================================

# Google (Gemini) - Primary AI Model
GEMINI_API_KEY=AIza...

# OpenAI (ChatGPT) - Optional
OPENAI_API_KEY=sk-...

# Anthropic (Claude) - Optional
ANTHROPIC_API_KEY=sk-ant-...

# Cohere - Optional
COHERE_API_KEY=...

# Replicate (Llama, etc.) - Optional
REPLICATE_API_KEY=r8_...

# ================================
# LibreView Client Settings
# ================================
LIBRE_VERSION=4.7
LIBRE_PRODUCT=llu.ios

# ================================
# Streamlit App Settings
# ================================
STREAMLIT_THEME=light
STREAMLIT_SERVER_PORT=8501

# ================================
# Default Settings
# ================================
DEFAULT_AI_MODEL=gemini-1.0-pro      # Default AI model for analysis
DEFAULT_UPDATE_INTERVAL=300          # Default data refresh interval in seconds
DEFAULT_GLUCOSE_UNITS=mg/dL         # or mmol/L